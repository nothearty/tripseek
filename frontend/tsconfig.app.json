{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "../dist/frontend",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["components/*"],
      "@lib/*": ["lib/*"],
      "@server/*": ["../backend/src/*"] // Adjust if needed
    },
    "composite": true, // Ensure this is present
    "jsx": "react-jsx", // Add this line
    "jsxImportSource": "react", // Add this line
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
